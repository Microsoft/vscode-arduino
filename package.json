{
  "name": "vscode-arduino",
  "displayName": "Arduino",
  "description": "Arduino for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "Microsoft",
  "engines": {
    "vscode": "^1.7.0"
  },
  "enableProposedApi": true,
  "categories": [
    "Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:arduino",
    "onCommand:arduino.verify",
    "onCommand:arduino.upload",
    "onCommand:arduino.openSerialPort",
    "onCommand:arduino.changeBaudRate",
    "onCommand:arduino.closeSerialPort",
    "onCommand:arduino.sendMessageToSerialPort",
    "workspaceContains:device.json"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "snippets": [
      {
        "language": "arduino",
        "path": "./snippets/arduino.json"
      }, {
        "language": "cpp",
        "path": "./snippets/arduino.json"
      }
    ],
    "commands": [
      {
        "command": "arduino.verify",
        "title": "Arduino: Verfiy"
      },
      {
        "command": "arduino.upload",
        "title": "Arduino: Upload"
      },
      {
        "command": "arduino.addLibPath",
        "title": "Arduino: Add library paths"
      },
      {
        "command": "arduino.openSerialPort",
        "title": "Arduino: Open Serial Port"
      },
      {
        "command": "arduino.changeBaudRate",
        "title": "Arduino: Change Baud Rate"
      },
      {
        "command": "arduino.closeSerialPort",
        "title": "Arduino: Stop Serial Monitor"
      },
      {
        "command": "arduino.sendMessageToSerialPort",
        "title": "Arduino: Send Text to Serial Port"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Arduino configuration",
      "properties": {
        "arduino.path": {
          "type": "string",
          "default": "arduino",
          "description": "Path to Arduino, you can use a custom version of Arduino by modifying this setting to include the full path."
        }
      }
    },
    "languages": [
      {
        "id": "arduino",
        "extensions": [
          ".ino"
        ],
        "aliases": [
          "Arduino",
          "arduino",
          "ino"
        ],
        "configuration": "./syntaxes/arduino.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "arduino",
        "path": "./syntaxes/arduino.tmLanguage",
        "scopeName": "source.cpp.arduino"
      }
    ],
    "explorer": {
      "treeLabel": "Arduino Examples",
      "treeExplorerNodeProviderId": "arduinoExampleTree"
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "gulp": "^3.9.1",
    "gulp-tslint": "^7.0.1",
    "mocha": "^2.3.3",
    "tslint": "^4.2.0",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "glob": "^7.1.1"
  }
}
